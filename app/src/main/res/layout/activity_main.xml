<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0D0D0D"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Header com Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingBottom="32dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="99 Assistente"
                android:textSize="32sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.02" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="● Inativo"
                android:textSize="14sp"
                android:textColor="#FF6B6B"
                android:alpha="0.9" />

        </LinearLayout>

        <!-- Botão Principal - Estilo Neumorphism -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="32dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="24dp"
            app:cardElevation="0dp">

            <Button
                android:id="@+id/btnToggleServico"
                android:layout_width="match_parent"
                android:layout_height="64dp"
                android:background="@drawable/btn_primary_selector"
                android:text="Ativar Assistente"
                android:textAllCaps="false"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="#FFFFFF"
                android:letterSpacing="0.02" />

        </androidx.cardview.widget.CardView>

        <!-- Seção: Calibração -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Calibração"
            android:textSize="11sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Posições de toque"
                    android:textSize="16sp"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/btnCalibrar"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:background="@drawable/btn_secondary"
                    android:text="Configurar"
                    android:textAllCaps="false"
                    android:textSize="14sp"
                    android:textColor="#BB86FC"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Seção: Configurações de Corrida -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurações de Corrida"
            android:textSize="11sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Valor mínimo -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Valor mínimo por Km"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="R$"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/etValorMinimoKm"
                        android:layout_width="90dp"
                        android:layout_height="44dp"
                        android:background="@drawable/input_background"
                        android:inputType="numberDecimal"
                        android:digits="0123456789.,"
                        android:text="2,00"
                        android:textColor="#03DAC6"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:padding="10dp" />

                </LinearLayout>

                <!-- Distância máxima -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Distância máxima"
                            android:textSize="14sp"
                            android:textColor="#FFFFFF" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Km para buscar"
                            android:textSize="12sp"
                            android:textColor="#666666"
                            android:layout_marginTop="2dp" />

                    </LinearLayout>

                    <EditText
                        android:id="@+id/etDistanciaMaximaBusca"
                        android:layout_width="90dp"
                        android:layout_height="44dp"
                        android:background="@drawable/input_background"
                        android:inputType="numberDecimal"
                        android:digits="0123456789.,"
                        android:text="10,0"
                        android:textColor="#03DAC6"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textAlignment="center"
                        android:padding="10dp" />

                </LinearLayout>

                <!-- Auto aceitar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Aceitar automaticamente"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/switchAutoAceitar"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:trackTint="#333333"
                        android:thumbTint="#BB86FC" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Seção: Configurações de Toque -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Configurações de Toque"
            android:textSize="11sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3 toques (fixo)"
                    android:textSize="13sp"
                    android:textColor="#BB86FC"
                    android:fontFamily="monospace"
                    android:layout_marginBottom="16dp" />

                <!-- Grid de configurações -->
                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:columnCount="2"
                    android:rowCount="4"
                    android:orientation="horizontal">

                    <!-- Duração -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_margin="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Duração (ms)"
                            android:textSize="12sp"
                            android:textColor="#888888" />

                        <EditText
                            android:id="@+id/etDuracaoToque"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/input_background"
                            android:inputType="number"
                            android:text="150"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Tamanho -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_margin="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Área (px)"
                            android:textSize="12sp"
                            android:textColor="#888888" />

                        <EditText
                            android:id="@+id/etTamanhoArea"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/input_background"
                            android:inputType="number"
                            android:text="100"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Intervalo mín -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_margin="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intervalo mín."
                            android:textSize="12sp"
                            android:textColor="#888888" />

                        <EditText
                            android:id="@+id/etIntervaloMin"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/input_background"
                            android:inputType="number"
                            android:text="100"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Intervalo máx -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_margin="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Intervalo máx."
                            android:textSize="12sp"
                            android:textColor="#888888" />

                        <EditText
                            android:id="@+id/etIntervaloMax"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/input_background"
                            android:inputType="number"
                            android:text="200"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Delay mín -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_margin="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delay início mín."
                            android:textSize="12sp"
                            android:textColor="#888888" />

                        <EditText
                            android:id="@+id/etDelayInicioMin"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/input_background"
                            android:inputType="number"
                            android:text="100"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Delay máx -->
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_columnWeight="1"
                        android:orientation="vertical"
                        android:layout_margin="6dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Delay início máx."
                            android:textSize="12sp"
                            android:textColor="#888888" />

                        <EditText
                            android:id="@+id/etDelayInicioMax"
                            android:layout_width="match_parent"
                            android:layout_height="44dp"
                            android:layout_marginTop="6dp"
                            android:background="@drawable/input_background"
                            android:inputType="number"
                            android:text="300"
                            android:textColor="#FFFFFF"
                            android:textSize="14sp"
                            android:textAlignment="center"
                            android:padding="8dp" />

                    </LinearLayout>

                </GridLayout>

                <!-- Indicador visual -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Indicador visual"
                        android:textSize="14sp"
                        android:textColor="#FFFFFF" />

                    <Switch
                        android:id="@+id/switchMostrarIndicador"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:checked="true"
                        android:trackTint="#333333"
                        android:thumbTint="#BB86FC" />

                </LinearLayout>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Botão Salvar -->
        <Button
            android:id="@+id/btnSalvarConfig"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/btn_save"
            android:text="Salvar Configurações"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:layout_marginBottom="24dp" />

        <!-- Seção: Estatísticas -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Estatísticas"
            android:textSize="11sp"
            android:textColor="#666666"
            android:textStyle="bold"
            android:letterSpacing="0.1"
            android:layout_marginBottom="12dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#1A1A1A"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvAceitas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:textColor="#03DAC6" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Aceitas"
                            android:textSize="13sp"
                            android:textColor="#888888" />

                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:background="#333333" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/tvRejeitadas"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:textSize="40sp"
                            android:textStyle="bold"
                            android:textColor="#FF6B6B" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rejeitadas"
                            android:textSize="13sp"
                            android:textColor="#888888" />

                    </LinearLayout>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#333333"
                    android:layout_marginVertical="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Última corrida"
                    android:textSize="12sp"
                    android:textColor="#666666" />

                <TextView
                    android:id="@+id/tvUltimaCorrida"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="Nenhuma ainda"
                    android:textSize="14sp"
                    android:textColor="#FFFFFF" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</ScrollView>
